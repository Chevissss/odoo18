<odoo>
    <record id="view_cancha_form" model="ir.ui.view">
        <field name="name">reserva.cancha.form</field>
        <field name="model">reserva.cancha</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sport_type"/>
                            <field name="hourly_rate"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="DescripciÃ³n">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_cancha_tree" model="ir.ui.view">
        <field name="name">reserva.cancha.list</field>
        <field name="model">reserva.cancha</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="sport_type"/>
                <field name="hourly_rate"/>
                <field name="active"/>
            </list>
        </field>
    </record>
</odoo>