<odoo>
    <record id="view_reserva_calendar" model="ir.ui.view">
        <field name="name">reserva.order.calendar</field>
        <field name="model">reserva.order</field>
        <field name="arch" type="xml">
            <calendar string="Reservas" 
                      date_start="start_date" 
                      date_stop="end_date" 
                      color="cancha_id" 
                      mode="week"
                      quick_create="0">
                <field name="partner_id"/>
                <field name="cancha_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="view_reserva_order_form" model="ir.ui.view">
        <field name="name">reserva.order.form</field>
        <field name="model">reserva.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirmar" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_done" string="Finalizar" type="object" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Cancelar" type="object" invisible="state in ('done','cancel')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="cancha_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_reserva_search" model="ir.ui.view">
        <field name="name">reserva.order.search</field>
        <field name="model">reserva.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="cancha_id"/>
                <filter string="Confirmadas" name="confirmed" domain="[('state','=','confirmed')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Cancha" name="group_cancha" context="{'group_by':'cancha_id'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>